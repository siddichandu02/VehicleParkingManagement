<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#9999ff" />
            <gradient android:angle="-90" android:startColor="#9999ff" android:endColor="#9999ff" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#9999ff" />
            <gradient android:angle="-90" android:startColor="#1a1aff" android:endColor="#9999ff" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#9999ff" />
            <gradient android:angle="-90" android:startColor="#3333ff" android:endColor="#9999ff" />
        </shape>
    </item>
</selector>